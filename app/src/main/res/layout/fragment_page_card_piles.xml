<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WizardPageContainer" >

    <TextView
        style="@style/WizardPageTitle" />

    <ScrollView
        style="@style/WizardPageScrollContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/WizardFormLabel"
                android:text="Game Name" />

            <EditText
                android:id="@+id/gameName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:hint="e.g. Five Card Draw"
                android:inputType="text|textAutoCorrect|textAutoComplete|textCapWords"
                android:saveEnabled="false" />

            <TextView
                style="@style/WizardFormLabel"
                android:text="Draw Piles" />

            <EditText
                android:id="@+id/drawPiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:hint="0"
                android:inputType="number"
                android:saveEnabled="false" />

            <TextView
                style="@style/WizardFormLabel"
                android:text="Discard Piles" />

            <EditText
                android:id="@+id/discardPiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:hint="0"
                android:inputType="number"
                android:saveEnabled="false" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>